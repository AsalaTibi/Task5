@model WebApplication2.Models.StudentCreateVm

<p>@ViewBag.PageTitle</p>

<div class="alert alert-success">
    @TempData["Success"]
</div>
<h3>Student Details</h3>

<ul>
    <li><strong>Name:</strong> @Model.Name</li>
    <li><strong>Email:</strong> @Model.Email</li>
    <li><strong>Date Of Birth:</strong> @Model.DateOfBirth.ToShortDateString()</li>
    <li><strong>Active:</strong> @(Model.IsActive ? "Yes" : "No")</li>
</ul>
